---
import Section from "../Section.astro";
import Logo from "@/icons/Logo.astro";
import ArrowReturnLeft from "@/icons/ArrowReturnLeft.astro";
---

<Section>
  <header class="body-font">
    <div
      class="container mx-auto flex flex-wrap py-4 flex-col md:flex-row items-center"
    >
      <a href="/" class="logoText flex items-center mb-4 md:mb-0">
        <Logo />
        <span class="ml-2 text-xl">Edinson Rivera</span>
      </a>
      <nav
        class="md:ml-auto flex flex-wrap gap-5 items-center text-base justify-center"
      >
        <a href="/" class="return-btn">Regresar <ArrowReturnLeft /></a>
      </nav>
    </div>
  </header>
</Section>

<style>
  header {
    color: rgba(30, 37, 44, 85%);
  }

  .logoText {
    font-family: "Inter Variable", sans-serif;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .return-btn {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    border: 0.0625rem solid rgba(30, 37, 44, 25%);
    border-radius: 0.125rem;
    padding-inline: 0.375rem;
    color: #999;
  }

  .return-btn:hover {
    color: #666;
    border: 0.0625rem solid #666;
  }

  @media (width <= 700px) {
    header {
      margin-bottom: 38px;
    }
  }
</style>
