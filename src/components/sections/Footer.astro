---
import Section from "../Section.astro";
import { basics } from "@landing";
const { name, profiles } = basics;
import { Github, Instagram, Linkedin, Threads, X } from "simple-icons-astro";
const SOCIAL_ICONS: Record<string, any> = {
  Github,
  Instagram,
  Linkedin,
  Threads,
  X,
};
---

<Section>
  <main>
    <h2>Sígueme</h2>
    <footer>
      <div class="avatar">
        <img src="../images/avatar.svg" alt=`${name}` class="avatar-img" />
        <h3>Edinson Rivera Jurado | Desarrollo Web | Community Manager</h3>
      </div>

      <div class="copyright">
        <p>© 2024 Copyright —@edirju</p>
      </div>

      <div class="social-icons">
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network];

            if (!Icon) {
              console.error(`Icono no encontrado para la red: ${network}`);
              return null;
            }

            return (
              <a
                href={url}
                title={`Visitar el perfil de ${name} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </div>
    </footer>
  </main>
</Section>

<style>
  main {
    margin: 0 auto 0px;
    max-width: 700px;
    
  }

  h2 {
    margin-bottom: 1.5rem;
    font-weight: 800;
    line-height: 1.5;
    font-size: 20px;
    text-transform: uppercase;
    background-color: #1e252c;
    color: #f8fafb;
    width: fit-content;
    padding: 1px 32px 1px 16px;
  }

  footer {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .avatar {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .avatar img {
    width: 36px;
    height: 36px;
  }
  .avatar h3 {
    font-size: 20px;
    font-weight: 500;
    letter-spacing: -0.05em;
  }

  .copyright p {
    font-size: 1rem;
    font-weight: 300;
    letter-spacing: 0.1em;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icons a {
    transition: all 0.2s ease-in-out;
  }
  .social-icons a:hover {
    color: rgba(30, 37, 44, 40%);
  }

  @media (width <= 700px) {
    main {
      margin-bottom: 38px;
      padding: 2rem;
    }

    footer {
      gap: 0.5rem;
    }

    .avatar {
      flex-direction: column;
      text-align: center;
    }

    .avatar img {
      width: 48px;
      height: 48px;
    }
  }
</style>
