---
import Section from "../Section.astro";
import Logo from "@/icons/Logo.astro";
import Download from "@/icons/Download.astro";
---

<Section>
  <header class="body-font">
    <div
      class="container mx-auto flex flex-wrap py-4 flex-col md:flex-row items-center"
    >
      <a href="/" class="logoText flex items-center mb-4 md:mb-0">
        <Logo />
        <!-- <span class="ml-2 text-xl">Edinson Rivera</span> hover:underline hover:underline-offset-2 -->
      </a>
      <nav
        class="md:ml-auto flex flex-wrap gap-5 items-center text-base justify-center"
      >
        <a
          href="/proyectos"
          class="nav-link hover:text-gray-900 "
        >
          Proyectos
        </a>
        <a
          href="/blog"
          class="nav-link hover:text-gray-900 "
        >
          Blog
        </a>
        <a href="/resume" target="_blank" class="resume-btn">
          Resume<Download />
        </a>
      </nav>
    </div>
  </header>
</Section>

<style>
  header {
    color: rgba(30, 37, 44, 85%);
  }

  .logoText {
    font-family: "Inter Variable", sans-serif;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .nav-link {
    position: relative;
    transition: .2s;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    height: 2px;
    background-color: var(--color-dark);
    transform: scaleX(0);
    transition: .2s;
    transform-origin: left;
  }
  .nav-link:hover {
    color: var(--color-dark);
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  .resume-btn {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    border: 0.0625rem solid #ddd;
    border-radius: 0.125rem;
    padding-inline: 0.375rem;
    color: #999;
  }

  .resume-btn:hover {
    color: #666;
    border: 0.0625rem solid #666;
  }

  @media (width <= 700px) {
    header {
      margin-bottom: 38px;
    }
  }
</style>
