---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import MinNav from "@/components/sections/Navbar.astro";
import BlogPost from "@/components/sections/BlogPost.astro";
import PostMedia from "@/components/sections/PostMedia.astro";
import Footer from "@/components/sections/Footer.astro";
import {
  Rss,
  X,
  Linkedin,
  Threads,
  Facebook,
  Instagram,
} from "simple-icons-astro";
import News from "@/icons/News.astro";

import { posts } from "@social";
import { basics } from "@landing";

const SOCIAL_ICONS: Record<string, any> = {
  Facebook,
  Instagram,
  Linkedin,
  Threads,
  X,
};
const { name, label } = basics;

const allPosts = await Astro.glob("@/pages/posts/*.md");
---

<Layout title=`Portafolio de ${name} - Blog & Notas`>
  <MinNav />  
  <BlogPost />
  <PostMedia />
  <Footer />
</Layout>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
    gap: 1rem;
    margin-bottom: 8px;
  }
  .subtitle {
    margin-block: 16px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: underline;
    text-underline-offset: 4px;
  }
</style>
