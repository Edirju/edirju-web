---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Logo from "@/icons/Logo.astro";
import ArrowReturnLeft from "@/icons/ArrowReturnLeft.astro";
import { slide } from "astro:transitions";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div
    class="absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px]"
  >
  </div>
  <Section>
    <header class="mb-8" transition:animate={slide({ duration: ".5s" })}>
      <div
        class="container mx-auto flex flex-wrap py-4 flex-col md:flex-row items-center"
      >
        <a href="/" class="logoText flex items-center mb-4 md:mb-0">
          <Logo />
          <!-- <span class="ml-1 text-2xl">Edinson.</span> -->
        </a>
        <nav
          class="md:ml-auto flex flex-wrap gap-5 items-center text-base justify-center"
        >
          <a href="/blog" class="return-btn"
            >Volver a Blog <ArrowReturnLeft /></a
          >
        </nav>
      </div>
    </header>

    <div>
      <h2 class="text-2xl font-bold">{frontmatter.title}</h2>
      <p class="italic text-gray-400">{frontmatter.pubDate.slice(0, 10)}</p>
      <p class="text-balance">{frontmatter.description}</p>
      <p>
        Escrito por: <span class="font-semibold text-gray-500 tracking-wide"
          >{frontmatter.author}</span
        >
      </p>
      <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
    </div>

    <div>
      <slot />
    </div>
  </Section>
</Layout>

<style>
  p {
    font-size: 14px;
    line-height: 1.5;
    text-wrap: balance;
    padding-left: 16px;
  }

  img {
    border: 1px solid rgb(30, 37, 44, 0.08);
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 700px;
    height: 350px;
    border-radius: 12px;
    margin: 16px 0;
  }

  .logoText {
    font-family: "Montserrat Variable", sans-serif;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .return-btn {
    position: relative;
    padding: 2px 8px;
    font-family: "Montserrat Variable", sans-serif;
    font-size: 12px;
    text-transform: uppercase;
    font-weight: 300;

    display: flex;
    align-items: center;
    gap: 4px;

    color: rgb(22, 20, 20, 0.85);

    transition: 0.2s;
    isolation: isolate;
  }

  .return-btn::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background-color: var(--clr-yellow);
    transition: 0.3s;
    transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275);
    z-index: -1;
  }

  .return-btn:hover::after {
    height: 100%;
  }

  @media (width <= 700px) {
    header {
      margin-bottom: 38px;
    }
  }
</style>
