---
import Layout from "@/layouts/Layout.astro";
import Logo from "@/icons/Logo.astro";
import ArrowReturnLeft from "@/icons/ArrowReturnLeft.astro";
import { slide } from "astro:transitions";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <header class="body-font">
    <div
      class="container mx-auto flex flex-wrap py-4 flex-col md:flex-row items-center"
    >
      <a href="/" class="logoText flex items-center mb-4 md:mb-0">
        <Logo />
        <span class="ml-2 text-xl">Edinson Rivera</span>
      </a>
      <nav
        class="md:ml-auto flex flex-wrap gap-5 items-center text-base justify-center"
      >
        <a href="/blog" class="return-btn">Regresar <ArrowReturnLeft /></a>
      </nav>
    </div>
  </header>

  <main>
    <h2 transition:animate={slide({ duration: ".5s" })}>{frontmatter.title}</h2>
    <p transition:animate={slide({ duration: ".5s" })}>
      {frontmatter.pubDate.slice(0, 10)}
    </p>
    <p transition:animate={slide({ duration: ".5s" })}>
      {frontmatter.description}
    </p>
    <p transition:animate={slide({ duration: ".5s" })}>
      Escrito por: {frontmatter.author}
    </p>
    <img
      src={frontmatter.image.url}
      alt={frontmatter.image.alt}
      transition:animate={slide({ duration: ".5s" })}
    />
    <slot />
  </main>
</Layout>

<style>
  main {
    max-width: 700px;
    margin: 0 auto 72px;
    width: 100%;
  }

  h2 {
    font-size: 24px;
    font-weight: 700;
  }

  p {
    font-size: 14px;
    line-height: 1.4;
    text-wrap: balance;
    margin: 8px 0;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 700px;
    height: 350px;
    border-radius: 10px;
    margin-bottom: 16px;
  }

  header {
    color: rgba(30, 37, 44, 85%);
    max-width: 700px;
    margin: 0 auto 72px;
  }

  .logoText {
    font-family: "Inter Variable", sans-serif;
    font-weight: 700;
    font-size: 1.2rem;
  }

  .return-btn {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    border: 0.0625rem solid rgba(30, 37, 44, 25%);
    border-radius: 0.125rem;
    padding-inline: 0.375rem;
    color: #999;
  }

  .return-btn:hover {
    color: #666;
    border: 0.0625rem solid #666;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem;
    }
    header {
      margin-bottom: 38px;
    }
  }
</style>
